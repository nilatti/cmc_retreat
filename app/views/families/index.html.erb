<h1>Listing families</h1>

<table border="2">
  <tr>
    <th>Family Name</th>
    <th>People</th>
    <th>Cabin</th>
    <th>Camp</th>
    <th>Day full weekend</th>
    <th>Day partial weekend</th>
    <th>Contribution</th>
    <th>TOTAL COST</th>
    <th>Paid</th>
    <th>Friday supper</th>
    <th>Friday snack</th>
    <th>Saturday breakfast</th>
    <th>Saturday lunch</th>
    <th>Saturday dinner</th>
    <th>Saturday snack</th>
    <th>Sunday breakfast</th>
    <th>Sunday lunch</th>
    <th>Allergies</th>
    
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @families.each do |family| %>
  <tr>
    <td><%= family.family_name %>
    <td><%= family.family_folks %></td>
    <td><%= family.cabin %></td>
    <td><%= family.camp %></td>
    <td><%= family.day_full_weekend %></td>
    <td><%= family.day_partial_weekend %></td>
    <td><%= family.contribution %></td>
    <td><%= family.total_cost %></td>
    <td><%= family.paid %></td>
    <td><%= family.friday_supper %></td>
    <td><%= family.friday_snack %></td>
    <td><%= family.saturday_breakfast %></td>
    <td><%= family.saturday_lunch %></td>
    <td><%= family.saturday_dinner %></td>
    <td><%= family.saturday_snack %></td>
    <td><%= family.sunday_breakfast %></td>
    <td><%= family.sunday_lunch %></td>
    <td><%= family.allergies %></td>
    
    <td><%= link_to 'Show', family %></td>
    <td><%= link_to 'Edit', edit_family_path(family) %></td>
    <td><%= link_to 'Destroy', family, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

